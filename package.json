{
  "name": "@6river/rxutils",
  "license": "UNLICENSED",
  "version": "0.0.0",
  "description": "ReactiveX Utilities",
  "author": "Tony Gaetani",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "dependencies": {
    "ramda": "^0.25.0",
    "rxjs": "^5.4.3"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.16",
    "@types/chai": "4.0.4",
    "@types/chance": "^0.7.35",
    "@types/lodash": "4.14.74",
    "@types/mocha": "2.2.42",
    "@types/node": "8.0.24",
    "@types/ramda": "github:types/npm-ramda#dist",
    "@types/sinon": "^2.3.6",
    "bluebird": "^3.5.1",
    "chai": "4.1.1",
    "chance": "1.0.4",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "2.0.0",
    "eslint": "4.5.0",
    "eslint-config-defaults": "9.0.0",
    "husky": "0.14.3",
    "mocha": "3.5.0",
    "mocha-junit-reporter": "1.13.0",
    "mocha-typescript": "1.1.7",
    "npm-run-all": "4.0.2",
    "nsp": "^2.8.1",
    "nyc": "11.1.0",
    "shx": "0.2.2",
    "sinon": "3.2.1",
    "ts-node": "3.3.0",
    "tslint": "5.6.0",
    "typescript": "^2.4.2",
    "validate-commit-msg": "2.14.0"
  },
  "scripts": {
    "build": "npm-run-all build:js",
    "build:js": "tsc --pretty",
    "build:watch": "tsc --pretty --watch",
    "clean": "shx rm -rf dist",
    "prepublish": "npm-run-all build",
    "pretest": "npm-run-all pretest:eslint",
    "pretest:eslint": "shx echo eslint .",
    "posttest": "nsp check",
    "preversion": "npm test",
    "test": "NODE_ENV=test nyc mocha --recursive --compilers ts:ts-node/register --bail",
    "coverage": "NODE_ENV=test nyc report --reporter=text-lcov | coveralls",
    "commitmsg": "validate-commit-msg"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/6RiverSystems/rxutils.git"
  },
  "bugs": {
    "url": "https://github.com/6RiverSystems/rxutils/issues"
  },
  "homepage": "https://github.com/6RiverSystems/rxutils#readme",
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "chore"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": "Follow <type>(<scope>): <subject> pattern, max 100 chars.",
      "autoFix": false
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
